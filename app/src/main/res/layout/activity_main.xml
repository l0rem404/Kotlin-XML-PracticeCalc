<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight=".5">

        <TextView
            android:id="@+id/txtInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3221"
            app:layout_constraintBottom_toTopOf="@id/txtRes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="textEnd"
            android:lines="2"
            android:maxLines="2"
            android:textSize="50sp"
            android:paddingTop="100dp"/>

        <TextView
            android:id="@+id/txtRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="100dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btnBackspace"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#555555"
            android:contentDescription="Backspace"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/backspace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="C"
            android:textColor="#f0ff00"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2c024a"/>

        <Button
            android:id="@+id/btnParenthesis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="( )"
            android:textColor="#f0ff00"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2c024a"/>

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="%"
            android:textColor="#f0ff00"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2c024a"/>

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textAlignment="center"
            android:text="รท"
            android:textColor="#f0ff00"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2c024a"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="7"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="8"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="9"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnMult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="X"
            android:textColor="#f0ff00"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2c024a"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="4"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="5"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="6"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textAlignment="center"
            android:text="-"
            android:textColor="#f0ff00"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2c024a"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="1"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="2"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="3"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textAlignment="center"
            android:text="+"
            android:textColor="#f0ff00"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2c024a"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btnPosNeg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="+/-"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="0"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="."
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnEq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textAlignment="center"
            android:text="="
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6fab85"/>
    </LinearLayout>

</LinearLayout>
